<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
  import gsap from "gsap";
  import $ from "jquery";

  document.addEventListener('DOMContentLoaded', function() {
    // GSAP animation sequence starts as soon as the page is fully loaded
    var tl = gsap.timeline();

    tl.to('#branch1', {duration: 1, x: -window.innerWidth * 3, y: -window.innerHeight * 3, ease: "power1.in"})
      .to('#branch2', {duration: 1, x: window.innerWidth * 3, y: -window.innerHeight * 3, ease: "power1.in"}, 0)
      .to('#branch3', {duration: 1, y: window.innerHeight * 3, ease: "power1.in"}, 0)
      .to('#svg-container', {duration: 1, scale: 0, ease: "power1.in"}, '-=1')
      .call(function() {
        // Show the main content after the animation completes
        const mainContent = document.getElementById('main-content');
        if (mainContent) {
          mainContent.style.display = 'block'; // Show the main content
        }
        $('.background2').animate({opacity: 0}, 1000, function() {
          $(this).remove(); // Optionally remove the background after fading out
        });
      });
  });
</script>

